{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Everything",
            "command": "${workspaceFolder}/build-all.sh",
            "osx": {
                "args": [
                    "macos",
                    "build",
                    "debug"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}